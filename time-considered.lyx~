\begin_body

\begin_layout Standard
in the Schrodinger picture:
\end_layout

\begin_layout Standard
\begin_inset Formula $f(k,q,t)=-(\frac{e^{-i(\nu_{k}+\nu_{q})t}}{[i(\nu_{k}+\nu_{q}-\omega_{ac})-\frac{1}{2}\Gamma_{a}][i(\nu_{q}-\omega_{bc})-\frac{1}{2}\Gamma_{b}]}+\frac{e^{i(-\omega_{ac})t-\frac{\Gamma_{a}}{2}t}}{[i(\nu_{k}+\nu_{q}-\omega_{ac})-\frac{1}{2}\Gamma_{a}][i(\nu_{k}-\omega_{ab})-\frac{1}{2}(\Gamma_{a}-\Gamma_{b})]}-\frac{e^{i(-\nu_{k}-\omega_{bc})t-\frac{\Gamma_{b}}{2}t}}{[i(\nu_{k}-\omega_{ab})-\frac{1}{2}(\Gamma_{a}-\Gamma_{b})][i(\nu_{q}-\omega_{bc})-\frac{1}{2}\Gamma_{b}]})$
\end_inset

 ( overall factors 
\begin_inset Formula $\sqrt{\nu_{ab}\nu_{bc}}(\frac{L}{2\pi})^{2}\frac{1}{2\epsilon\hbar V}$
\end_inset

)
\end_layout

\begin_layout Standard
\begin_inset Formula $\nu_{q}\sim\omega_{bc},\,\nu_{k}\sim\omega_{ac},$
\end_inset


\end_layout

\begin_layout Standard
FT of the first term:
\end_layout

\begin_layout Standard
\begin_inset Formula $f_{1}(x_{1},x_{2})=\int_{-\infty}^{\infty}dk\int_{-\infty}^{\infty}dq\frac{-e^{-i(\nu_{k}+\nu_{q})t}e^{ikx_{1}}e^{iqx_{2}}}{[i(\nu_{k}+\nu_{q}-\omega_{ac})-\frac{1}{2}\Gamma_{a}][i(\nu_{q}-\omega_{bc})-\frac{1}{2}\Gamma_{b}]}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\int_{-\infty}^{\infty}dk\int_{0}^{\infty}dq\frac{-e^{-i\nu_{k}t}e^{ikx_{1}}e^{iq(x_{2}-ct)}}{[i(\nu_{k}+\nu_{q}-\omega_{ac})-\frac{1}{2}\Gamma_{a}][i(\nu_{q}-\omega_{bc})-\frac{1}{2}\Gamma_{b}]}+\int_{-\infty}^{\infty}dk\int_{0}^{\infty}dq\frac{-e^{-i\nu_{k}}e^{ikx_{1}}e^{iq(-ct-x_{2})}}{[i(\nu_{k}+\nu_{q}-\omega_{ac})-\frac{1}{2}\Gamma_{a}][i(\nu_{q}-\omega_{bc})-\frac{1}{2}\Gamma_{b}]}$
\end_inset


\end_layout

\begin_layout Standard
since |
\begin_inset Formula $i(\hbar q-\omega_{bc})-\frac{1}{2}\Gamma_{b}|\gg1$
\end_inset

 when q<0
\end_layout

\begin_layout Standard
\begin_inset Formula $=\int_{-\infty}^{\infty}dk\int_{-\infty}^{\infty}dq\frac{-e^{-i\nu_{k}t}e^{ikx_{1}}e^{iq(x_{2}-ct)}}{[i(\nu_{k}+\hbar q-\omega_{ac})-\frac{1}{2}\Gamma_{a}][i(\hbar q-\omega_{bc})-\frac{1}{2}\Gamma_{b}]}+\int_{-\infty}^{\infty}dk\int_{-\infty}^{\infty}dq\frac{-e^{-i\nu_{k}}e^{ikx_{1}}e^{iq(-ct-x_{2})}}{[i(\hbar k+\hbar q-\omega_{ac})-\frac{1}{2}\Gamma_{a}][i(\hbar q-\omega_{bc})-\frac{1}{2}\Gamma_{b}]}$
\end_inset


\end_layout

\begin_layout Standard
singularities: 
\begin_inset Formula $q_{1}=(-\frac{i}{2}\Gamma_{b}+\omega_{bc})/\hbar$
\end_inset

, 
\begin_inset Formula $q_{2}=(-\frac{i}{2}\Gamma_{a}+\omega_{ac}-\nu_{k})/\hbar$
\end_inset

 in the lower half plane
\end_layout

\begin_layout Standard
\begin_inset Formula $=\int_{-\infty}^{\infty}dk(-2\pi i)e^{-i\nu_{k}t}e^{ikx_{1}}[\frac{e^{iq_{2}(x_{2}-ct)}-e^{iq_{1}(x_{2}-ct)}}{q_{2}-q_{1}}\theta(ct-x_{2})\theta(q)+\frac{e^{iq_{2}(-x_{2}-ct)}-e^{iq_{1}(-x_{2}-ct)}}{q_{2}-q_{1}}\theta(ct+x_{2})\theta(-q)]$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\int_{-\infty}^{\infty}dk(-2\pi i)e^{-i\nu_{k}t}e^{ikx_{1}}[\frac{e^{iq_{2}(|x_{2}|-ct)}-e^{iq_{1}(|x_{2}|-ct)}}{q_{2}-q_{1}}\theta(ct-|x_{2}|)]$
\end_inset


\end_layout

\begin_layout Standard
redefine 
\begin_inset Formula $q_{2}=(-\frac{i}{2}\Gamma_{a}+\omega_{ac})/\hbar$
\end_inset

, 
\begin_inset Formula $Req_{2}>Req_{1}>0$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\int_{-\infty}^{\infty}dk(-2\pi i)e^{-i\nu_{k}t}e^{ikx_{1}}[\frac{e^{i(q_{2}-\nu_{k})(|x_{2}|-ct)}-e^{iq_{1}(|x_{2}|-ct)}}{q_{2}-q_{1}-\nu_{k}}\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\int_{0}^{\infty}dk(-2\pi i)e^{-ikt}e^{ikx_{1}}[\frac{e^{i(q_{2}-k)(|x_{2}|-ct)}-e^{iq_{1}(|x_{2}|-ct)}}{q_{2}-q_{1}-k}\theta(ct-|x_{2}|)+\int_{0}^{\infty}dk(-2\pi i)e^{-ikt}e^{-ikx_{1}}[\frac{e^{i(q_{2}-k)(|x_{2}|-ct)}-e^{iq_{1}(|x_{2}|-ct)}}{q_{2}-q_{1}-k}\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\int_{0}^{\infty}dk(-2\pi i)(e^{-ikt}e^{ikx_{1}}+e^{-ikt}e^{-ikx_{1}})\frac{e^{i(q_{2}-k)(|x_{2}|-ct)}-e^{iq_{1}(|x_{2}|-ct)}}{q_{2}-q_{1}-k}\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\approx\int_{-\infty}^{\infty}dk(-2\pi i)(e^{-ikt}e^{ikx_{1}}+e^{-ikt}e^{-ikx_{1}})\frac{e^{iq_{2}(|x_{2}|-ct)}e^{-ik(|x_{2}|-ct)}-e^{iq_{1}(|x_{2}|-ct)}}{q_{2}-q_{1}-k}\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
first term:
\end_layout

\begin_layout Standard
\begin_inset Formula $\approx\int_{-\infty}^{\infty}dk(-2\pi i)(e^{ik(x_{1}-|x_{2}|)}+e^{-ik(x_{1}+|x_{2}|)})\frac{e^{iq_{2}(|x_{2}|-ct)}}{q_{2}-q_{1}-k}\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
when 
\begin_inset Formula $Imq_{2}>Imq_{1}$
\end_inset

 this gives :
\end_layout

\begin_layout Standard
\begin_inset Formula $=(-2\pi i)^{2}(e^{i(q_{2}-q_{1})(x_{1}-|x_{2}|)}\theta(x_{1}-|x_{2}|)\theta(k)+e^{-i(q_{2}-q_{1})(x_{1}+|x_{2}|)}\theta(-x_{1}-|x_{2}|)\theta(-k))e^{iq_{2}(|x_{2}|-ct)}\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
when 
\begin_inset Formula $Imq_{2}<Imq_{1}$
\end_inset

 this gives :
\end_layout

\begin_layout Standard
\begin_inset Formula $=(-2\pi i)^{2}(e^{i(q_{2}-q_{1})(x_{1}-|x_{2}|)}\theta(-x_{1}+|x_{2}|)\theta(k)+e^{-i(q_{2}-q_{1})(x_{1}+|x_{2}|)}\theta(x_{1}+|x_{2}|)\theta(-k))e^{iq_{2}(|x_{2}|-ct)}\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
second term:
\end_layout

\begin_layout Standard
\begin_inset Formula $\approx\int_{-\infty}^{\infty}dk(-2\pi i)(e^{-ikt}e^{ikx_{1}}+e^{-ikt}e^{-ikx_{1}})\frac{-e^{iq_{1}(|x_{2}|-ct)}}{q_{2}-q_{1}-k}\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
when 
\begin_inset Formula $Imq_{2}>Imq_{1}$
\end_inset

 this gives 
\begin_inset Formula $\theta(x_{1}-ct)$
\end_inset


\end_layout

\begin_layout Standard
when 
\begin_inset Formula $Imq_{2}>Imq_{1}$
\end_inset

 :
\end_layout

\begin_layout Standard
\begin_inset Formula $=(-2\pi i)^{2}(e^{i(q_{2}-q_{1})(x_{1}-ct)}\theta(ct-x_{1})+e^{i(q_{2}-q_{1})(-x_{1}-ct)}\theta(ct+x))(-e^{iq_{1}(|x_{2}|-ct)})\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=(-2\pi i)^{2}e^{i(q_{2}-q_{1})(|x_{1}|-ct)}(-e^{iq_{1}(|x_{2}|-ct)})\theta(ct-|x_{1}|)\theta(ct-|x_{2}|)$
\end_inset


\end_layout

\begin_layout Standard
FT of the second term:
\end_layout

\begin_layout Standard
\begin_inset Formula $f_{2}(x_{1},x_{2})=\int_{-\infty}^{\infty}dk\int_{-\infty}^{\infty}dq\frac{e^{i(-\omega_{ac})t-\frac{\Gamma_{a}}{2}t}e^{ikx_{1}}e^{iqx_{2}}}{[i(\nu_{k}+\nu_{q}-\omega_{ac})-\frac{1}{2}\Gamma_{a}][i(\nu_{k}-\omega_{ab})-\frac{1}{2}(\Gamma_{a}-\Gamma_{b})]}$
\end_inset


\end_layout

\begin_layout Standard
This is proportional to 
\begin_inset Formula $\theta(-|x_{1}|)\theta(-|x_{2}|)=0$
\end_inset


\end_layout

\begin_layout Standard
FT of the third term:
\end_layout

\begin_layout Standard
\begin_inset Formula $f_{2}(x_{1},x_{2})=\int_{-\infty}^{\infty}dk\int_{-\infty}^{\infty}dq\frac{e^{i(-\nu_{k}-\omega_{bc})t-\frac{\Gamma_{b}}{2}t}e^{ikx_{1}}e^{iqx_{2}}}{[i(\nu_{k}-\omega_{ab})-\frac{1}{2}(\Gamma_{a}-\Gamma_{b})][i(\nu_{q}-\omega_{bc})-\frac{1}{2}\Gamma_{b}]}\propto\theta(-|q|)=0$
\end_inset


\end_layout

